<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="b.podalevics" id="create app_role table">
        <preConditions onFail="CONTINUE" onFailMessage="Table app_role already exists">
            <not>
                <tableExists tableName="app_role"/>
            </not>
        </preConditions>
        <createTable tableName="app_role">
            <column name="app_role_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="possibilities" type="mediumtext">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create courier table">
        <preConditions onFail="CONTINUE" onFailMessage="Table courier already exists">
            <not>
                <tableExists tableName="courier"/>
            </not>
        </preConditions>
        <createTable tableName="courier">
            <column name="courier_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="registration_date" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_zone_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="courier_status" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="balance" type="decimal(6,2)">
                <constraints nullable="false"/>
            </column>
            <column name="statistics_id" type="varchar(36)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="support_manager_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="app_role_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create delivery_zone table">
        <preConditions onFail="CONTINUE" onFailMessage="Table delivery_zone already exists">
            <not>
                <tableExists tableName="delivery_zone"/>
            </not>
        </preConditions>
        <createTable tableName="delivery_zone">
            <column name="delivery_zone_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="restaurants" type="longtext">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create manager table">
        <preConditions onFail="CONTINUE" onFailMessage="Table manager already exists">
            <not>
                <tableExists tableName="manager"/>
            </not>
        </preConditions>
        <createTable tableName="manager">
            <column name="manager_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="manager_name" type="longtext">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create order table">
        <preConditions onFail="CONTINUE" onFailMessage="Table order already exists">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>
        <createTable tableName="order">
            <column name="order_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="courier_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="order_status" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="placed_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="delivered_at" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create product table">
        <preConditions onFail="CONTINUE" onFailMessage="Table product already exists">
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>
        <createTable tableName="product">
            <column name="product_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="product_price" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="medium text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create restaurant table">
        <preConditions onFail="CONTINUE" onFailMessage="Table restaurant already exists">
            <not>
                <tableExists tableName="restaurant"/>
            </not>
        </preConditions>
        <createTable tableName="restaurant">
            <column name="restaurant_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="owner" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="app_role_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_status" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_zone_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="b.podalevics" id="create statistics table">
        <preConditions onFail="CONTINUE" onFailMessage="Table statistics already exists">
            <not>
                <tableExists tableName="statistics"/>
            </not>
        </preConditions>
        <createTable tableName="statistics">
            <column name="statistics_id" type="varchar(36)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="courier_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="from" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="till" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="completed_deliveries" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="earned_money" type="decimal(6,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

<!--    adding foreign keys-->

    <!-- Alter Table courier - Add fk_delivery_zone_id -->
    <changeSet id="1" author="your_name">
        <addForeignKeyConstraint constraintName="fk_delivery_zone_id"
                                 baseTableName="courier"
                                 baseColumnNames="delivery_zone_id"
                                 referencedTableName="delivery_zone"
                                 referencedColumnNames="delivery_zone_id"/>
    </changeSet>

    <!-- Add Other Foreign Keys to courier -->
    <changeSet id="2" author="your_name">
        <addForeignKeyConstraint constraintName="fk_statistics_id"
                                 baseTableName="courier"
                                 baseColumnNames="statistics_id"
                                 referencedTableName="statistics"
                                 referencedColumnNames="statistics_id"/>
    </changeSet>

    <changeSet id="3" author="your_name">
        <addForeignKeyConstraint constraintName="fk_support_manager_id"
                                 baseTableName="courier"
                                 baseColumnNames="support_manager_id"
                                 referencedTableName="manager"
                                 referencedColumnNames="manager_id"/>
    </changeSet>

    <changeSet id="4" author="your_name">
        <addForeignKeyConstraint constraintName="fk_app_role_id"
                                 baseTableName="courier"
                                 baseColumnNames="app_role_id"
                                 referencedTableName="app_role"
                                 referencedColumnNames="app_role_id"/>
    </changeSet>

    <!-- Alter Table order - Add Foreign Keys -->
    <changeSet id="5" author="your_name">
        <addForeignKeyConstraint constraintName="fk_courier_id"
                                 baseTableName="order"
                                 baseColumnNames="courier_id"
                                 referencedTableName="courier"
                                 referencedColumnNames="courier_id"/>
    </changeSet>

    <changeSet id="6" author="your_name">
        <addForeignKeyConstraint constraintName="fk_restaurant_id"
                                 baseTableName="order"
                                 baseColumnNames="restaurant_id"
                                 referencedTableName="restaurant"
                                 referencedColumnNames="restaurant_id"/>
    </changeSet>

    <!-- Continue adding other foreign keys as needed... -->
    <!-- Each foreign key alteration is a new changeSet. -->

</databaseChangeLog>